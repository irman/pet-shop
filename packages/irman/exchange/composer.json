{
    "name": "irman/exchange",
    "description": "This package fetches the exchange rate of the day from the European Central Bank daily reference",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Irman\\Exchange\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Irman\\Exchange\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Irman Ahmad",
            "email": "irman@outlook.my"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-libxml": "*",
        "ext-curl": "*",
        "laravel/framework": "^10.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "orchestra/testbench": "*"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Irman\\Exchange\\Providers\\ExchangeServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    }
}
